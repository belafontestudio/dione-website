.jquery-modal
  z-index 10 !important
.see-plan
  color light-blue

#plan-modal
  width 90%
  height 90%
  position relative
  top 5%
  left 5%
  z-index 20 !important
  margin 0 auto
  box-shadow none
  padding 0
  background white
  img
    max-width 90%
    align(both)

  div.unactive
    display none

  .menu-plan
    position absolute
    bottom 10px
    left 20px
    z-index 40
    li
      display inline-block

      margin 5px



    a
        padding 10px 20px
        background-color light-blue
        opacity .6
        outline 0
        font-family: 'futura_bqregular', sans-serif
        font-weight normal !important
        text-rendering optimizeLegibility
        color white
        font-size 15px
        line-height 15px
        letter-spacing 1.8px
        text-transform uppercase
        text-decoration none
        &.active, &:hover, &:active
            //color light-blue
            opacity 1
            background-color #9CD2CC
            border-bottom 1px solid light-blue
        &.active
            opacity 1
            background-color #9CD2CC
            border-bottom 1px solid light-blue
    .active
      opacity 1



.modal a.close-modal
  position absolute
  top 18px
  right 18px
  display block
  width 30px
  height 30px
  text-indent -9999px
  background url("../images/sprite/close.png") no-repeat  0 0
  background-size cover





///// DOTS

.dot
  // width 16px
  // height 16px
  // border-radius 100%
  background-color #2980b9
  border 3px solid #3498db
  -webkit-border-radius 100%
  height 21px
  width 21px
  position absolute
  animation pulsate 1.4s ease-out
  animation-iteration-count infinite
  opacity 0.0

  z-index 211

@keyframes pulsate
  0% {
  -webkit-transform scale(0.1, 0.1)
  opacity 0.0
  }
  50% {
    opacity 1.0
  }
  100% {
    -webkit-transform scale(1.5, 1.5)
    opacity 0.0
  }




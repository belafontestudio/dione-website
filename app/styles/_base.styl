@import 'jeet'
@import url('http://fonts.googleapis.com/css?family=Alegreya+Sans:300,400,500')
@import url('http://fonts.googleapis.com/css?family=Gentium+Book+Basic')
@import 'type-utils'



@font-face {
    font-family: 'futura_bqregular';
    src: url('../fonts/Futura Demi/futurabq-demibold-webfont.eot');
    src: url('../fonts/Futura Demi/futurabq-demibold-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/Futura Demi/futurabq-demibold-webfont.woff2') format('woff2'),
         url('../fonts/Futura Demi/futurabq-demibold-webfont.woff') format('woff'),
         url('../fonts/Futura Demi/futurabq-demibold-webfont.ttf') format('truetype'),
         url('../fonts/Futura Demi/futurabq-demibold-webfont.svg#futura_bqregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

support-for-ie = true
base-font-size = 100%

yellow = #F4BB3B
navy-blue = #103158
light-blue = #9dd2cc

scale = 0 450px 600px 768px 1080px 1300px

placeholder-color(color)
    &::-webkit-input-placeholder
       color color !important
    &:-moz-placeholder  /* Firefox 18- */
       color color !important
    &::-moz-placeholder  /* Firefox 19+ */
       color color !important
    &:-ms-input-placeholder
       color color !important


// http://paulirish.com/2012/box-sizing-border-box-ftw/
* { box-sizing: border-box; }

html,
body
    height 100%
    width 100%
    background-color white
    margin 0

body,
input
    font-family: 'Gentium Book Basic', serif
    font-weight 300
    text-rendering optimizeLegibility
    color white
    section.center

        margin 0 auto
        position relative
     div.clear
         width 0
         height 0
         clear both
         display block
    ul
        list-style-type none
        padding 0
        margin 0
        li
            margin 0
            padding 0
    .uppercase
        text-transform uppercase
h1, h2, h3, h4, a
    font-family: 'futura_bqregular', sans-serif
    font-weight normal !important
    color white
div#landing-menu
    position absolute
    width: 100%
    z-index 3
    top 20px
    .center
        center(1400px, 20px)
        width: 100%
        overflow-x scroll
        z-index 4
        -webkit-overflow-scrolling: touch
        white-space nowrap
        position relative
        height 50px
        .scroll
            width 200%
            position relative
            height 60px
        ul
            display block

            li
                display inline-block
